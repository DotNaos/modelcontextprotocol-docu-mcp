{
    "inputs": [
        {
            "type": "promptString",
            "id": "example-token",
            "description": "The token for the MCP server",
            "password": true
        }
    ],
    "servers": {
        "example-mcp-server": {
            "type": "stdio",
            "command": "npx",
            "args": [
                "-y",
                // IMPORTANT: Ensure this points to your GitHub repo
                "github:Username/example-mcp-server",
            ],
            "env": {
                "EXAMPLE_TOKEN": "${input:example-token}",
            }
        }
    }
}
